@model data_models.Models.OrderItem

@{
    ViewData["Title"] = "Delete Item";
}

<h2>Delete Item</h2>

<p class="text-danger">@ViewData["ErrorMessage"]</p>

<h3>Are your sure you want to remove this item from your order?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.MenuItem.Title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MenuItem.Price)
        </dt>
        <dd>
            @if (Model.MenuItem.DiscountPrice == null)
            {
                @Html.DisplayFor(model => model.MenuItem.Price)
            }
            else
            {
                @Html.DisplayFor(model => model.MenuItem.DiscountPrice)
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ExtendedPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExtendedPrice)
        </dd>
    </dl>

    <form asp-action="DeleteItem" method="post">
        <input type="hidden" name="id" value="@Model.OrderItemID" />
        <input type="submit" value="Remove" class="btn btn-default" /> |
        <a asp-action="Review" asp-route-id="@Model.OrderID">Back to Order</a>
    </form>
</div>
